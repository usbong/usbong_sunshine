<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/UsbongEditTextFieldParentLayout"
	android:id="@+id/parent_layout_id"       	
	>
	<ScrollView style="@style/UsbongDefaultScrollView"
	>		 	
		<LinearLayout style="@style/UsbongDefaultMainLayout">    
			<TextView android:id="@+id/textfield_textview"
			    style="@style/UsbongDefaultTextView"	    	
			    android:text="@string/default_textview" 
			/>	
				    
			<EditText android:id="@+id/textfield_edittext"
				style="@style/UsbongDefaultEditText"	
			/>					
			<TextView android:id="@+id/textfieldunit_textview"
			    style="@style/UsbongDefaultTextView"	    	
			    android:text=""/>
		</LinearLayout>
	</ScrollView>	    	    							
	<LinearLayout
		style="@style/UsbongDefaultBackNextButtonLayout">	
	    <Button android:id="@+id/back_button"
		    style="@style/UsbongDefaultBackNextButton"
		    android:text="Back"/>
		    
	   	<Button android:id="@+id/next_button"
		    style="@style/UsbongDefaultBackNextButton"
		    android:text="Next"/>	    
	</LinearLayout>
</LinearLayout>